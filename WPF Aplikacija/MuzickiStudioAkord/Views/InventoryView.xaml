<Page x:Class="MuzickiStudioAkord.Views.InventoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuzickiStudioAkord"
      mc:Ignorable="d" 
      Width="650"
      Height="450"
	  Title="Home">


    <Grid x:Name="gridArtikli">

        <StackPanel Orientation="Horizontal">
            <ScrollViewer>
                <StackPanel Name="stackpanelArtikli"
                            Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Left"
                            Margin="3"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
            </ScrollViewer>



            <StackPanel Name="stackpanelKorpa"
                        HorizontalAlignment="Right"
                        Orientation="Vertical"
                        Margin="0,0,0,0">
                <TextBlock Text="Artikli u korpi:" />
                <ListView x:Name="listViewKorpa"
                          ItemsSource="{Binding KorpaArtikli}" />

            </StackPanel>
        </StackPanel>
    </Grid>


</Page>
