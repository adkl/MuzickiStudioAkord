<Page x:Class="MuzickiStudioAkord.Views.InventoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuzickiStudioAkord"
      mc:Ignorable="d" 
      Width="650"
      Height="450"
	  Title="Home">
    <Grid x:Name="gridArtikli">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="LightSteelBlue">
            <Button Content="Zavrsi kupovinu" Width="Auto" Height="30" Click="Button_Click" VerticalAlignment="Center"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <StackPanel Name="stackpanelArtikli"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="3"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </ScrollViewer>
    </Grid>


</Page>
